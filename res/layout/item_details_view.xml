<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="90dp"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="67dp"
        android:layout_height="85dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />

    <ImageView
        android:id="@+id/imagViewBar"
        android:layout_width="10dp"
        android:layout_height="85dp"
        android:layout_alignRight="@id/photo"
        android:scaleType="fitXY"
        android:src="@drawable/bar_full" />

    <ImageView
        android:id="@+id/imageViewBlackBar"
        android:layout_width="10dp"
        android:layout_height="85dp"
        android:layout_alignRight="@id/photo"
        android:scaleType="fitXY"
        android:src="@drawable/bar_black" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_toRightOf="@+id/photo"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:lines="1"
            android:text="Cosmo K."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvHeadLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:maxLines="2"
            android:text="CEO@introMi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginTop="2dp" >

            <ImageView
                android:id="@+id/imageViewBracketLeft"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:minHeight="15dp"
                android:minWidth="15dp"
                android:src="@drawable/quotes" />

            <TextView
                android:id="@+id/tvMission"
                android:layout_width="fill_parent"
                android:layout_height="20dp"
                android:layout_gravity="top"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="2dp"
                android:layout_weight="0.13"
                android:lines="1"
                android:maxLines="1"
                android:text="ID"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/imageViewBracketRight"
                android:layout_width="2dp"
                android:layout_height="2dp"
                android:layout_gravity="top"
                android:layout_marginBottom="8dp"
                android:adjustViewBounds="true"
                android:minHeight="15dp"
                android:minWidth="15dp"
                android:src="@drawable/quotes" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rssi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:focusable="false"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="wrap_content"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/photo"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/separator" />

</RelativeLayout>