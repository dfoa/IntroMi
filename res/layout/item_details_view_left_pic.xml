<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="385dp"
    android:focusableInTouchMode="false" >

    <ImageView
        android:id="@+id/photo"
        android:layout_width="135dp"
        android:layout_height="170dp"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:adjustViewBounds="false"
        android:maxHeight="150dp"
        android:maxWidth="120dp"
        android:scaleType="centerCrop"
        android:src="@drawable/profile" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="wrap_content"
        android:layout_height="160dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:layout_alignParentTop="false"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="8dp"
        android:layout_toLeftOf="@+id/photo"
        android:gravity="top"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="8dp"
            android:lines="1"
            android:text="Cosmo K."
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tvHeadLine"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:maxLines="2"
            android:text="CEO@introMi"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="18sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="8dp" >

            <ImageView
                android:id="@+id/imageViewBracketLeft"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="top"
                android:maxHeight="20dp"
                android:maxWidth="20dp"
                android:minHeight="15dp"
                android:minWidth="15dp"
                android:src="@drawable/quotes" />

            <TextView
                android:id="@+id/tvMission"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="6dp"
                android:layout_weight="0.13"
                android:maxLines="3"
                android:text="Looking for a Growth Hacking expert"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/imageViewBracketRight"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="8dp"
                android:minHeight="15dp"
                android:minWidth="15dp"
                android:src="@drawable/quotes" />

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="false"
        android:gravity="left"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/rssi"
            android:layout_width="wrap_content"
            android:layout_height="4dp"
            android:layout_gravity="left"
            android:focusable="false"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </LinearLayout>

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="4dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/photo"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/separator" />

</RelativeLayout>